<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>

<bean id ="points" class="org.capgemini.spring.example2.Ex1">
<property name = "p1" ref = "pointA" />
<property name = "p2" ref = "pointB" />
<property name = "p3" ref = "pointC" />

</bean>

<bean id ="pointA" class = "org.capgemini.spring.example2.Point">
<property name = "x" value = "2" />
<property name = "y" value = "5" />
</bean>

<bean id ="pointB" class = "org.capgemini.spring.example2.Point">
<property name = "x" value = "5" />
<property name = "y" value = "8" />
</bean>

<bean id ="pointC" class = "org.capgemini.spring.example2.Point">
<property name = "x" value = "-2" />
<property name = "y" value = "-5" />
</bean>




</beans>